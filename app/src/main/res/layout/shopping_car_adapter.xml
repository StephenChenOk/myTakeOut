<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="10dp"
    android:background="@drawable/item_selector"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp">

        <TextView
            android:id="@+id/shopping_car_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="店名" />

        <ImageView
            android:id="@+id/shopping_car_store_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/store_name_go" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/item_selector">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="63dp"
            android:layout_gravity="top"
            android:layout_weight="2"
            app:cardCornerRadius="5dp">

            <ImageView
                android:id="@+id/shopping_car_menu_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bao_one_store" />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shopping_car_menu_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="top"
                android:text="商品名"
                android:textColor="#111"
                android:textSize="17dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shopping_car_menu_price"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:text="¥6"
                    android:textColor="#ff3333"
                    android:textSize="15dp" />


                <ImageView
                    android:id="@+id/shopping_car_subtract_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/subtract" />

                <TextView
                    android:id="@+id/shopping_car_menu_number"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/shopping_car_add_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="7dp"
                    android:src="@drawable/add_blue" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
