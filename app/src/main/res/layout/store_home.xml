<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/return_logo_store"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/return_logo"
            android:layout_weight="1" />

        <!--搜索框-->
        <TextView
            android:id="@+id/search_tv_menu"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="6"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/text_frame"
            android:gravity="center"
            android:hint="请输入商品名" />

    </LinearLayout>

    <RadioGroup
        android:id="@+id/radio_group_home_store"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radioBtn_store_home_menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="点菜"
            android:textColor="@drawable/home_store_text_color"
            android:textSize="17dp" />

        <RadioButton
            android:id="@+id/radioBtn_store_home_grade"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="评价"
            android:textColor="@drawable/home_store_text_color"
            android:textSize="17dp" />


        <RadioButton
            android:id="@+id/radioBtn_store_home_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:text="商家"
            android:textColor="@drawable/home_store_text_color"
            android:textSize="17dp" />

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPage_home_store"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12" />

</LinearLayout>
